<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.hypoport.community.mobile.fleetbattle">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/FullscreenTheme">
        <activity
            android:name="de.hypoport.community.mobile.fleetbattle.ui.activities.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.hypoport.community.mobile.fleetbattle.ui.activities.MainMenuActivity"
            android:label="@string/title_activity_main_menu"></activity>
        <activity
            android:name="de.hypoport.community.mobile.fleetbattle.ui.activities.GameActivity"
            android:label="@string/title_activity_game"></activity>
    </application>

</manifest>
