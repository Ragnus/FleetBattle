<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvShipCount"
        android:background="#FF0000"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:id="@+id/battleshipView"
        android:src="@drawable/battleship"
        android:background="#00FF99"
        android:visibility="visible"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:id="@+id/destroyerView"
        android:src="@drawable/destroyer"
        android:background="#0099FF"
        android:visibility="visible"
        android:layout_gravity="center_horizontal" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:id="@+id/cruiserView"
        android:src="@drawable/cruiser"
        android:background="#999900"
        android:visibility="visible"
        android:layout_gravity="center_horizontal" />
</LinearLayout>